{
  "schemaVersion": 1,
  "id": "hugescreenshot",
  "version": "${version}",
  "name": "Huge Screenshots and Panoramas",
  "description": "enables some unused code that lets you take big .tga screenshots like in beta and take Panoramas",
  "authors": ["BlizzardfurMaxxx"],
  "contact": {
    "repo": "https://github.com/Blizzardfur-Maxxx/Minecraft-Huge-Screenshots-and-Panoramas-Mod"
  },
  "license": "GNU General Public License v3.0",

  "environment": "*",
  "accessWidener" : "hugescreenshot.accesswidener",
  "entrypoints": {
    "client": [
      "org.blizzardfur.hugescreenshot.client.HugescreenshotClient"
    ],
    "main": [
      "org.blizzardfur.hugescreenshot.Hugescreenshot"
    ]
  },
  "mixins": [
  ],
  "accessWidener" : "hugescreenshot.accesswidener",
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": "${minecraft_version}"
  }
}
